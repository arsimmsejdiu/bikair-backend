{
  "compilerOptions": {
    "outDir": ".build",
    "rootDir": "./",
    "target": "ES6",
    "declaration": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es2017",
      "DOM"
    ]
  }
}
